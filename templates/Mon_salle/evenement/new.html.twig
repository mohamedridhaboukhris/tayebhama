{% extends 'base_dash.html.twig' %}

{% block title %}Ajouter un Événement{% endblock %}

{% block content %}
<div class="container my-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-primary fw-bold">Ajouter un Événement pour la Salle {{ salle.code }}</h1>
            <p class="text-muted">Complétez le formulaire ci-dessous pour ajouter un événement.</p>
        </div>
    </div>

    <!-- Messages d'erreur -->
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger text-center">
            {{ message }}
        </div>
    {% endfor %}

    <!-- Salles disponibles -->
    {% if availableSalles is defined %}
        <div class="alert alert-info mt-4">
            <h5 class="fw-bold">Salles disponibles :</h5>
            <ul class="mb-0">
                {% for salle in availableSalles %}
                    <li>{{ salle.code }} (Capacité : {{ salle.capacite }}, Bloc : {{ salle.bloc }})</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <!-- Formulaire -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i> Ajouter
                        </button>
                        <a href="{{ path('salle_evenements', {'id': salle.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
