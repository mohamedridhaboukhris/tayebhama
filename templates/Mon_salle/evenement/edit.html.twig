{% extends 'base_dash.html.twig' %}

{% block title %}Modifier l'Événement : {{ evenement.titre }}{% endblock %}

{% block content %}
<div class="container my-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-primary fw-bold">Modifier l'Événement : {{ evenement.titre }}</h1>
            <p class="text-muted">Utilisez le formulaire ci-dessous pour modifier les informations de cet événement.</p>
        </div>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </button>
                        <a href="{{ path('salle_evenements', {'id': evenement.salle.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
