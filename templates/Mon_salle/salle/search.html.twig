{% extends 'base_dash.html.twig' %}

{% block title %}Recherche de Salle{% endblock %}

{% block content %}
<div class="container my-5">
    <!-- Titre de la page -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-primary fw-bold">Rechercher une Salle</h1>
        </div>
    </div>

    <!-- Formulaire de recherche -->
    <div class="card p-4 shadow-sm mb-4">
        <form method="get" action="{{ path('salle_search') }}">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="id" class="form-label">ID de la Salle</label>
                    <input type="text" name="id" id="id" class="form-control" placeholder="Ex: 5" value="{{ criteria.id|default('') }}">
                </div>
                <div class="col-md-4">
                    <label for="bloc" class="form-label">Bloc</label>
                    <input type="text" name="bloc" id="bloc" class="form-control" placeholder="Ex: A, B, C" value="{{ criteria.bloc|default('') }}">
                </div>
                <div class="col-md-4">
                    <label for="capacite" class="form-label">Capacité (min)</label>
                    <input type="number" name="capacite" id="capacite" class="form-control" placeholder="Ex: 50" value="{{ criteria.capacite|default('') }}">
                </div>
            </div>
            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fa fa-search"></i> Rechercher
                </button>
                <a href="{{ path('salle_search', {'action': 'historique'}) }}" class="btn btn-secondary px-4">
                    <i class="fa fa-history"></i> Historique des recherches
                </a>
            </div>
        </form>
    </div>

    <!-- Résultat immédiat -->
    {% if salle %}
        <div class="text-center mt-4">
            <p class="text-success">Une salle correspond aux critères de recherche !</p>
            <a href="{{ path('salle_show', {'id': salle.id}) }}" class="btn btn-info">
                <i class="fa fa-eye"></i> Voir les détails
            </a>
        </div>
    {% else %}
        {% if criteria is not empty %}
            <p class="text-center mt-5 text-danger">Aucune salle ne correspond aux critères de recherche.</p>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
