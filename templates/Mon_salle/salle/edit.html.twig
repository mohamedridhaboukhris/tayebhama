{% extends 'base_dash.html.twig' %}

{% block title %}Modifier la Salle{% endblock %}

{% block content %}
    <div class="container my-5">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="text-primary fw-bold">Modifier la Salle</h1>
                <p class="text-muted">Veuillez modifier les informations de la salle ci-dessous.</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Informations de la Salle</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <!-- Champ Code de la Salle -->
                                {{ form_label(form.code, 'Code de la Salle', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 101A'}}) }}
                                {{ form_errors(form.code) }}
                            </div>
                            <div class="col-md-6">
                                <!-- Champ Capacité -->
                                {{ form_label(form.capacite, 'Capacité', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.capacite, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 50'}}) }}
                                {{ form_errors(form.capacite) }}
                            </div>
                            <div class="col-md-6">
                                <!-- Champ Type -->
                                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Salle de conférence'}}) }}
                                {{ form_errors(form.type) }}
                            </div>
                            <div class="col-md-6">
                                <!-- Champ Bloc -->
                                {{ form_label(form.bloc, 'Bloc', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.bloc, {'attr': {'class': 'form-control', 'placeholder': 'Ex: A, B, C'}}) }}
                                {{ form_errors(form.bloc) }}
                            </div>
                            <div class="col-md-6">
                                <!-- Champ Étage -->
                                {{ form_label(form.etage, 'Étage', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.etage, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 1, 2, 3'}}) }}
                                {{ form_errors(form.etage) }}
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                            <a href="{{ path('salle_all') }}" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
