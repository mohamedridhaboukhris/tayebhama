{% extends 'base.html.twig' %}

{% block body %}
    <section class="section why-us" data-section="section2">
        <div class="container my-5">
            <div class="row">
                <div class="col-md-12 text-center mb-5">
                    <div class="section-heading">
                        <h2 class="text-primary fw-bold">Upcoming Courses</h2>
                        <p class="text-muted">See all upcoming courses with their details below.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                {% if cours is not empty %}
                    {% for cours in cours %}
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">{{ cours.nomCours }}</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong><i class="fa fa-calendar-alt"></i> Date Created:</strong> {{ cours.dateCreation|date('d M Y') }}</p>
                                    <p><strong><i class="fa fa-user"></i> Instructor:</strong> {{ cours.enseignantResponsable }}</p>
                                    <p><strong><i class="fa fa-users"></i> Class:</strong> {{ cours.classConcernee }}</p>
                                    <a href="{{ path('app_cours_show', {'id': cours.id}) }}" class="btn btn-outline-primary mt-3">
                                        <i class="fa fa-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-md-12">
                        <div class="alert alert-info text-center">
                            <i class="fa fa-exclamation-triangle"></i> No upcoming courses available.
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
