{% extends 'base_dash.html.twig' %}

{% block title %}Ajouter une Classe{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="form-container">
        <h2 class="text-center">Ajouter une Classe</h2>
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom de la Classe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Classe A'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.niveau, 'Niveau', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.niveau, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 6e'}}) }}
                {{ form_errors(form.niveau) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.annee, 'Année', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.annee, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.annee) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.specialite, 'Spécialité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.specialite) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.nombreEtudiants, 'Nombre d\'Étudiants', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nombreEtudiants, {
                    'attr': {
                        'class': 'form-control',
                        'min': 25,
                        'max': 32,
                        'placeholder': 'Entre 25 et 32'
                    }
                }) }}
                {{ form_errors(form.nombreEtudiants) }}
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary px-4">Ajouter Classe</button>
                <a href="{{ path('classe_list') }}" class="btn btn-danger px-4">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
