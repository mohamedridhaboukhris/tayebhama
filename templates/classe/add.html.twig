{% extends 'base_dash.html.twig' %}

{% block title %}Ajouter une Classe{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="form-container">
        <h2>Ajouter une Classe</h2>
        {{ form_start(form) }}
            <div class="input-group">
                {{ form_label(form.nom, 'Nom de la Classe') }}
                {{ form_widget(form.nom, {'attr': {'placeholder': 'Ex: Classe A'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="input-group">
                {{ form_label(form.niveau, 'Niveau') }}
                {{ form_widget(form.niveau, {'attr': {'placeholder': 'Ex: 6e'}}) }}
                {{ form_errors(form.niveau) }}
            </div>

            <div class="input-group">
                {{ form_label(form.annee, 'Année') }}
                {{ form_widget(form.annee) }}
                {{ form_errors(form.annee) }}
            </div>

            <div class="input-group">
                {{ form_label(form.specialite, 'Spécialité') }}
                {{ form_widget(form.specialite) }}
                {{ form_errors(form.specialite) }}
            </div>

            <div class="input-group">
                {{ form_label(form.nombreEtudiants, 'Nombre d\'Étudiants') }}
                {{ form_widget(form.nombreEtudiants, {
                    'attr': {
                        'class': 'form-control',
                        'min': 25,
                        'max': 32,
                        'placeholder': 'Entre 25 et 32'
                    }
                }) }}
                {{ form_errors(form.nombreEtudiants) }}
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-submit">Ajouter Classe</button>
                <a href="{{ path('classe_list') }}" class="btn-cancel">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
