{% extends 'base_dash.html.twig' %}

{% block title %}Ajouter un Événement{% endblock %}

{% block content %}
<div class="container-fluid px-0" style="background: url('{{ asset('assets/images/background-salles.jpg') }}') no-repeat center center; background-size: cover; min-height: 100vh;">
    <div class="container py-5">
<div class="container my-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-primary fw-bold">Ajouter un Événement{% if salle is defined %} pour la Salle {{ salle.code }}{% endif %}</h1>
            <p class="text-muted">Complétez le formulaire ci-dessous pour ajouter un événement.</p>
        </div>
    </div>

    <!-- Messages d'erreur -->
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger text-center">
            {{ message }}
        </div>
    {% endfor %}

    <!-- Formulaire -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="border-radius: 10px;">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Détails de l'Événement</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_label(form.titre, 'Titre de l\'Événement', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.heureDebut, 'Heure de Début', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.heureDebut, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.heureDebut) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.heureFin, 'Heure de Fin', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.heureFin, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.heureFin) }}
                        </div>
                        <div class="col-12">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        {% if form.salle is defined %}
                            <div class="col-12">
                                {{ form_label(form.salle, 'Salle', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.salle, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.salle) }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i> Ajouter
                        </button>
                        {% if salle is defined %}
                            <a href="{{ path('evenement_by_salle', {'id': salle.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        {% else %}
                            <a href="{{ path('evenement_list') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        {% endif %}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
